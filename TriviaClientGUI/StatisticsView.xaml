<UserControl x:Class="TriviaClientGUI.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TriviaClientGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="558" Height="384">
            <TextBlock Text="Total games played:" Margin="10" HorizontalAlignment="Center" FontSize="20"/>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0" Width="200">
                <TextBlock x:Name ="TotalNumText" Width="200" Height="26" TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center" Text="0" FontSize="18"/>
            </Border>

            <TextBlock Text="Number of correct answers:" Margin="10" HorizontalAlignment="Center" FontSize="20"/>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0" Width="200">
                <TextBlock x:Name ="CorrectNumText" Width="200" Height="26" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Text="0" FontSize="18"/>
            </Border>

            <TextBlock Text="Number of wrong answers:" Margin="10" HorizontalAlignment="Center" FontSize="20"/>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0" Width="200">
                <TextBlock x:Name ="WrongNumText" Width="200" Height="26" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Text="0" FontSize="18"/>
            </Border>

            <TextBlock Text="Average time for each answer:" Margin="10" HorizontalAlignment="Center" FontSize="20"/>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0" Width="200">
                <TextBlock x:Name ="AvgTimeText" Width="200" Height="26" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Text="0" FontSize="18"/>
            </Border>

            <Button Content="Return to Menu" Width="130" Height="30" Margin="20" Click="ReturnToMenu_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
