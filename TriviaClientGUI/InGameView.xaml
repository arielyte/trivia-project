<UserControl x:Class="TriviaClientGUI.InGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TriviaClientGUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <TextBlock x:Name ="TopText" Text="Current Question:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="24" TextDecorations="Underline" />
        <TextBlock x:Name="CurrentQuestion" Text="Place Holder" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" FontSize="30" Width="665"/>

        <Button x:Name ="button_1_correct" Content="Answer 1" Width="200" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,200" Click="CorrectAnswerClick"/>
        <Button x:Name ="button_2_correct" Content="Answer 2" Width="200" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,150" Click="IncorrectAnswerClick"/>
        <Button x:Name ="button_3_correct" Content="Answer 3" Width="200" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,100" Click="IncorrectAnswerClick"/>
        <Button x:Name ="button_4_correct" Content="Answer 4" Width="200" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" Click="IncorrectAnswerClick"/>

        <TextBlock x:Name = "CurrentScore" Text="" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,420,0,0" FontSize="20"/>

        <StackPanel x:Name="LeaderboardStackPanel" Orientation="Vertical" Margin="106,67,103,85">
            <!-- Leaderboard entries will be added here -->
        </StackPanel>

        <TextBlock x:Name ="TimerTextBlock" Text="Timer" Width="262" Height="35" FontSize ="20" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,410,0,0" Visibility="Hidden"/>
        <TextBlock x:Name="WaitingMessage" Text="Waiting for other players..." TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" FontSize="30" Width="665" Visibility="Hidden"/>
        <Button x:Name ="Exit" Content="Return to Menu" Width="96" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="720,405,0,0" Click="ExitGame"/>
        
    </Grid>
</UserControl>
