<Window x:Class="TriviaClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Chat Client" Height="496" Width="884">
    <Grid x:Name="mainGrid">
        <TextBlock Text="THE AWESOME TRIVIA" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,2,0,0" Height="35" Width="222" FontSize="20" FontWeight="Bold" TextDecorations="Underline"/>

        <Button Content="Sign Up" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="37" Margin="0,163,0,0" Click="SignUpButton_Click" FontSize="15" FontWeight="Bold"/>
        <Button Content="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="37" Margin="0,121,0,0" Click="LoginButton_Click" FontSize="15" FontWeight="Bold" Grid.Column="1" Visibility = "Visible" x:Name="LoginButton"/>
        <Button Content="Log out" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="37" Margin="0,121,0,0" Click="LogoutButton_Click" FontSize="15" FontWeight="Bold" Grid.Column="1" Visibility = "Hidden" x:Name="LogoutButton"/> <!--LogoutButton_Click-->
        <Button Content="Exit" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Click="ExitButton_Click" FontSize="15" FontWeight="Bold" Margin="0,331,0,0"/>
        <Button Content="Join Room" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="37" Margin="0,205,0,0" Click="JoinRoom_Click" FontSize="15" FontWeight="Bold"/> <!-- JoinRoomButton_Click -->
        <Button Content="Create Room" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="37" Click="CreateRoom_Click" FontSize="15" FontWeight="Bold" Margin="0,246,0,0"/> <!-- CreateRoomButton_Click -->
        <Button Content="My statistics" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="37" Click="MyStatistics_Click" FontSize="15" FontWeight="Bold" Margin="0,288,0,0"/> <!-- MyStatisticsButton_Click -->

        <!-- Labels for username and password -->
        <TextBlock Text="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,56,0,0" Height="23" Width="47" RenderTransformOrigin="-0.333,0.654"/>
        <TextBlock Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,92,0,0"/>

        <!-- New text boxes for username and password -->
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="30" Margin="0,50,0,0" TextAlignment="Center" Grid.Column="0"/>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="30" Margin="0,85,0,0" TextAlignment="Center" Grid.Column="1"/>

        <TextBlock x:Name="messageTextBlock" Text="" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,28,0,0" Height="20" TextAlignment="Center" Width="302" Grid.ColumnSpan="2"/>

        <Frame x:Name="mainFrame" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
